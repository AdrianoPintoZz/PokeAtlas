                                        Tag="kanto-route-3"
                                        Loaded="Hotspot_Loaded"
                                        Click="Hotspot_Click" Canvas.Left="96" Canvas.Top="73" RenderTransformOrigin="0.5,1.42" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                <Button Style="{StaticResource HotspotButtonBase}"
