                                <Button Style="{StaticResource HotspotButtonBase}"
                                        Width="14" Height="38"
                                        Content="Viridian Forest"
                                        FontSize="1"
                                        Tag="viridian-forest"
                                        Loaded="Hotspot_Loaded"
                                        Click="Hotspot_Click" Canvas.Left="60" Canvas.Top="117" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Button Style="{StaticResource HotspotButtonBase}"
                                        Width="25" Height="30"
