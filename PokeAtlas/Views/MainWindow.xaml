<Page x:Class="PokeAtlas.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="PokeAtlas – Kanto"
      Background="#23272A">

    <!-- Layout fluido e responsivo -->
    <Grid Background="#23272A">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="16,16,16,8">
            <TextBlock Text="Mapa de Kanto Pokémon FireRed"
                 FontSize="28"
                 FontWeight="Bold"
                 Foreground="White"
                 DockPanel.Dock="Left"/>
            <TextBlock Text="PokeAtlas"
                 Foreground="#9CA3AF"
                 Margin="12,6,0,0"
                 DockPanel.Dock="Left"/>
        </DockPanel>

        <!-- Conteúdo principal: sidebar + mapa -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <!-- Sidebar adaptativa: entre 260 e 420 px -->
                <ColumnDefinition Width="Auto" MinWidth="260" MaxWidth="420"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0"
              CornerRadius="12"
              Background="#2C2F33"
              BorderBrush="#3A3F44"
              BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Título/Indicador -->
                    <TextBlock Text="Localizações de Kanto"
                     Foreground="White"
                     FontWeight="SemiBold"
                     Margin="12,12,12,8"/>

                    <!-- Lista elástica com scroll -->
                    <GroupBox Grid.Row="1"
                    Header="Lista"
                    Foreground="White"
                    Padding="8"
                    Margin="12,0,12,12"
                    BorderBrush="#3A3F44"
                    BorderThickness="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <ListBox x:Name="RegionsList"
                         DisplayMemberPath="name"
                         SelectionChanged="RegionsList_SelectionChanged"
                         HorizontalContentAlignment="Stretch"
                         MinHeight="200"/>

                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </Border>

            <!-- Divisor arrastável -->
            <GridSplitter Grid.Column="1"
                    Width="5"
                    HorizontalAlignment="Stretch"
                    Background="#3A3F44"
                    ResizeBehavior="PreviousAndNext"
                    ResizeDirection="Columns"/>

            <!-- Área do mapa -->
            <Border Grid.Column="2"
              CornerRadius="12"
              Background="#2C2F33"
              BorderBrush="#3A3F44"
              BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Mapa: mantém proporções; com scroll e zoom -->
                    <ScrollViewer Grid.Row="0"
                        HorizontalScrollBarVisibility="Auto"
                        VerticalScrollBarVisibility="Auto">
                        <!-- Contentor com zoom via LayoutTransform -->
                        <Grid x:Name="MapContainer">
                            <Grid.LayoutTransform>
                                <ScaleTransform ScaleX="{Binding ElementName=ZoomSlider, Path=Value}"
                                ScaleY="{Binding ElementName=ZoomSlider, Path=Value}"/>
                            </Grid.LayoutTransform>

                            <!-- Substitua a Source no code-behind; Stretch=Uniform preserva proporção -->
                            <Image Source="/Images/Kanto_Region.png"
                                   MaxWidth="500"
                                   MaxHeight="500"
                         Stretch="Uniform"
                         SnapsToDevicePixels="True"
                         UseLayoutRounding="True"/> 
                        </Grid>
                    </ScrollViewer>

                    <!-- Controlo de zoom -->
                    <StackPanel Grid.Row="1"
                      Orientation="Horizontal"
                      HorizontalAlignment="Right"
                      Margin="8">
                        <TextBlock Text="Zoom"
                       Foreground="#D1D5DB"
                       Margin="0,0,8,0"
                       VerticalAlignment="Center"/>
                        <Slider x:Name="ZoomSlider"
                    Minimum="0.5"
                    Maximum="3"
                    Value="1"
                    Width="160"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Rodapé -->
        <TextBlock Grid.Row="2"
               Margin="16,0,16,16"
               Foreground="#9CA3AF"
               Text="© PokeAtlas – Kanto"
               HorizontalAlignment="Right"/>
    </Grid>
</Page>
