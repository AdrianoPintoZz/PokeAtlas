                    <ScrollViewer x:Name="MapScroll"
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto"
                                  CanContentScroll="False"
                                  ScrollChanged="MapScroll_ScrollChanged">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Canvas x:Name="MapCanvas"
                                    Width="400" Height="400"
                                    Background="#0F1115">
                                <Canvas.LayoutTransform>
                                    <ScaleTransform
                                        ScaleX="{Binding Value, ElementName=ZoomSlider}"
                                        ScaleY="{Binding Value, ElementName=ZoomSlider}"/>
                                </Canvas.LayoutTransform>

                                <Image x:Name="RegionImage"
                                       Canvas.Left="1" Canvas.Top="3"
                                       Width="400" Height="400"
                                       Stretch="Fill"
                                       Source="/Images/Kanto_Region.png"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       SizeChanged="RegionImage_SizeChanged" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                                <!-- Hotspots -->
                                <Button Style="{StaticResource HotspotButtonBase}"
                                        Width="23" Height="27"
                                        Content="Pallet Town"
                                        FontSize="3"
                                        Tag="pallet-town"
