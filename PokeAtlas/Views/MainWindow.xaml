                                    Tag="kanto-route-19"
                                    Loaded="Hotspot_Loaded"
                                    Click="Hotspot_Click" Canvas.Left="201" Canvas.Top="342" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Button Style="{StaticResource HotspotButtonBase}"
                                    Width="118" Height="20"
                                    Content="Route 20"
                                    FontSize="2"
                                    Tag="kanto-route-20"
                                    Loaded="Hotspot_Loaded"
                                    Click="Hotspot_Click" Canvas.Left="83" Canvas.Top="383" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Button Style="{StaticResource HotspotButtonBase}"
                                    Width="25" Height="25"
                                    Content="Cinnabar Island"
                                    FontSize="2"
                                    Tag="cinnabar-island"
                                    Loaded="Hotspot_Loaded"
                                    Click="Hotspot_Click" Canvas.Left="59" Canvas.Top="380" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Button Style="{StaticResource HotspotButtonBase}"
                                    Width="23" Height="101"
                                    Content="Route 21"
                                    FontSize="2"
                                    Tag="kanto-route-21"
                                    Loaded="Hotspot_Loaded"
                                    Click="Hotspot_Click" Canvas.Left="60" Canvas.Top="280" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Button Style="{StaticResource HotspotButtonBase}"
                                    Width="23" Height="80"
                                    Content="Route 10"
                                    FontSize="2"
                                    Tag="kanto-route-10"
                                    Loaded="Hotspot_Loaded"
                                    Click="Hotspot_Click" Canvas.Left="378" Canvas.Top="53" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <Button Style="{StaticResource HotspotButtonBase}"
                                    Width="24" Height="20"
                                    Content="Lavender Town"
                                    FontSize="2"
                                    Tag="lavender-town"
                                    Loaded="Hotspot_Loaded"
                                    Click="Hotspot_Click" Canvas.Left="377" Canvas.Top="133" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Button Style="{StaticResource HotspotButtonBase}"
                                    Width="26" Height="20"
                                    Content="Indigo Plateau"
                                    FontSize="3"
                                    Tag="indigo-plateau"
                                    Loaded="Hotspot_Loaded"
                                    Click="Hotspot_Click" Canvas.Left="-1" Canvas.Top="13" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <Button Style="{StaticResource HotspotButtonBase}"
                                    Width="23" Height="23"
                                    Content="Victory Road"
                                    FontSize="3"
                                    Tag="kanto-victory-road-2"
                                    Loaded="Hotspot_Loaded"
                                    Click="Hotspot_Click" Canvas.Left="1" Canvas.Top="53" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                <Button Style="{StaticResource HotspotButtonBase}"
                                    Width="12" Height="16"
                                    Content="Pokemon Town"
                                    FontSize="1"
                                    Tag="pokemon-town"
                                    Loaded="Hotspot_Loaded"
                                    Click="Hotspot_Click" Canvas.Left="389" Canvas.Top="125" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                            </Canvas>
                        </Grid>
                    </ScrollViewer>

                    <!-- Navegação vertical -->
                    <RepeatButton x:Name="NavUp"
                                  Visibility="Collapsed"
                                  Height="32"
                                  VerticalAlignment="Top"
                                  HorizontalAlignment="Stretch"
                                  Click="NavUp_Click"
                                  Delay="300" Interval="50"
                                  Content="▲"
                                  Foreground="White" FontSize="14" FontWeight="Bold"
                                  BorderThickness="0">
                        <RepeatButton.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#99000000" Offset="0"/>
                                <GradientStop Color="#00000000" Offset="1"/>
                            </LinearGradientBrush>
                        </RepeatButton.Background>
                    </RepeatButton>

                    <RepeatButton x:Name="NavDown"
                                  Visibility="Collapsed"
                                  Height="32"
                                  VerticalAlignment="Bottom"
                                  HorizontalAlignment="Stretch"
                                  Click="NavDown_Click"
                                  Delay="300" Interval="50"
                                  Content="▼"
                                  Foreground="White" FontSize="14" FontWeight="Bold"
                                  BorderThickness="0">
                        <RepeatButton.Background>
                            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                <GradientStop Color="#99000000" Offset="0"/>
                                <GradientStop Color="#00000000" Offset="1"/>
                            </LinearGradientBrush>
                        </RepeatButton.Background>
                    </RepeatButton>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
