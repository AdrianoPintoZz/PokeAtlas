                                    Tag="kanto-route-6"
                                    Loaded="Hotspot_Loaded"
                                    Click="Hotspot_Click" Canvas.Left="271" Canvas.Top="162" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Button Style="{StaticResource HotspotButtonBase}"
                                    Width="72" Height="20"
                                    Content="Route 11"
                                    FontSize="2"
                                    Tag="kanto-route-11"
                                    Loaded="Hotspot_Loaded"
                                    Click="Hotspot_Click" Canvas.Left="306" Canvas.Top="213" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <Button Style="{StaticResource HotspotButtonBase}"
                                    Width="24" Height="121"
                                    Content="Route 12"
                                    FontSize="2"
                                    Tag="kanto-route-12"
                                    Loaded="Hotspot_Loaded"
                                    Click="Hotspot_Click" Canvas.Left="377" Canvas.Top="152" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                <Button Style="{StaticResource HotspotButtonBase}"
                                    Width="71" Height="20"
                                    Content="Route 13"
                                    FontSize="2"
                                    Tag="kanto-route-13"
                                    Loaded="Hotspot_Loaded"
                                    Click="Hotspot_Click" Canvas.Left="330" Canvas.Top="273" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Button Style="{StaticResource HotspotButtonBase}"
                                    Width="25" Height="60"
                                    Content="Route 14"
                                    FontSize="2"
                                    Tag="kanto-route-14"
                                    Loaded="Hotspot_Loaded"
                                    Click="Hotspot_Click" Canvas.Left="306" Canvas.Top="273" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                <Button Style="{StaticResource HotspotButtonBase}"
                                    Width="71" Height="20"
                                    Content="Route 15"
                                    FontSize="2"
                                    Tag="kanto-route-15"
                                    Loaded="Hotspot_Loaded"
                                    Click="Hotspot_Click" Canvas.Left="236" Canvas.Top="313" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Button Style="{StaticResource HotspotButtonBase}"
                                    Width="48" Height="40"
                                    Content="Fuchsia City"
                                    FontSize="2"
                                    Tag="fuchsia-city"
                                    Loaded="Hotspot_Loaded"
                                    Click="Hotspot_Click" Canvas.Left="189" Canvas.Top="303" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Button Style="{StaticResource HotspotButtonBase}"
                                    Width="60" Height="20"
                                    Content="Route 18"
                                    FontSize="2"
                                    Tag="kanto-route-18"
                                    Loaded="Hotspot_Loaded"
                                    Click="Hotspot_Click" Canvas.Left="130" Canvas.Top="313" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Button Style="{StaticResource HotspotButtonBase}"
                                    Width="24" Height="61"
                                    Content="Route 19"
