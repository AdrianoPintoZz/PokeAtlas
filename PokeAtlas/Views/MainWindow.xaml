<Page x:Class="PokeAtlas.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#0F1115" Margin="0">

    <Page.Resources>
        <SolidColorBrush x:Key="BgCard" Color="#171A21"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#2A2F3A"/>
        <SolidColorBrush x:Key="FgPrimary" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="FgMuted" Color="#9CA3AF"/>

        <Style x:Key="HotspotButtonBase" TargetType="Button">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#AAFFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#40FFFFFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#66FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <DockPanel Grid.ColumnSpan="3" Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Kanto — Localizações e Mapa"
                 FontSize="20" FontWeight="Bold"
                 Foreground="{StaticResource FgPrimary}"/>
        </DockPanel>

        <!-- Lista de localizações -->
        <Border Grid.Column="0" Grid.Row="1" Background="{StaticResource BgCard}"
            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="10">
            <DockPanel Margin="8">
                <TextBox x:Name="SearchBox"
                 Height="30" Margin="0,0,0,8"
                 Background="#111520" Foreground="{StaticResource FgPrimary}"
                 BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                 DockPanel.Dock="Top"/>
                <ListBox x:Name="RegionsList"
                 DisplayMemberPath="name"
                 SelectionChanged="RegionsList_SelectionChanged"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </DockPanel>
        </Border>

        <!-- MAPA com Zoom + Pan + Hotspots -->
        <Grid Grid.Column="2" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Zoom -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8" VerticalAlignment="Center">
                <TextBlock Text="Zoom" Foreground="{StaticResource FgMuted}" Margin="0,0,8,0"/>
                <Slider x:Name="ZoomSlider"
                        Minimum="0.5" Maximum="2.0" Value="1.0"
                        TickFrequency="0.25" IsSnapToTickEnabled="True" Width="180"/>
            </StackPanel>

            <!-- Área do mapa -->
            <Border Grid.Row="1" Background="{StaticResource BgCard}"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="10">
                <ScrollViewer x:Name="MapScroll"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              CanContentScroll="False">
                    <Grid>
                        <Grid.RenderTransform>
                            <ScaleTransform
                                ScaleX="{Binding ElementName=ZoomSlider, Path=Value}"
                                ScaleY="{Binding ElementName=ZoomSlider, Path=Value}"/>
                        </Grid.RenderTransform>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Canvas x:Name="MapCanvas"
                                    Width="400" Height="400"
                                    Background="#0F1115"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <Image x:Name="RegionImage"
                                       Canvas.Left="0" Canvas.Top="0"
                                       Width="400" Height="400"
                                       Stretch="Fill"
                                       Source="/Images/Kanto_Region.png"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       SizeChanged="RegionImage_SizeChanged"/>

                                <!-- Hotspots definidos por percentuais no Tag -->
                                <Button Style="{StaticResource HotspotButtonBase}"
                                        Width="30" Height="28"
                                        Content="Pallet Town"
                                        FontSize="5"
                                        Tag="pallet-town"
                                        Loaded="Hotspot_Loaded"
                                        Click="Hotspot_Click" Canvas.Left="56" Canvas.Top="253" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                <Button Style="{StaticResource HotspotButtonBase}"
                                        Width="50" Height="45"
                                        Content="Viridian City"
                                        FontSize="7"
                                        Tag="viridian-city"
                                        Loaded="Hotspot_Loaded"
                                        Click="Hotspot_Click" Canvas.Left="46" Canvas.Top="178"/>
                                <Button Style="{StaticResource HotspotButtonBase}"
                                        Width="25" Height="30"
                                        Content="Route 1"
                                        FontSize="7"
                                        Tag="kanto-route-1"
                                        Loaded="Hotspot_Loaded"
                                        Click="Hotspot_Click" Canvas.Left="59" Canvas.Top="223" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                <Button Style="{StaticResource HotspotButtonBase}"
                                        Width="50" Height="40"
                                        Content="pewter-city"
                                        FontSize="7"
                                        Tag="pewter-city"
                                        Loaded="Hotspot_Loaded"
                                        Click="Hotspot_Click" Canvas.Left="46" Canvas.Top="58"/>
                                <Button Style="{StaticResource HotspotButtonBase}"
                                        Width="30" Height="155"
                                        Content="Route 23"
                                        FontSize="5"
                                        Tag="kanto-route-23"
                                        Loaded="Hotspot_Loaded"
                                        Click="Hotspot_Click" Canvas.Left="-4" Canvas.Top="33" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                <Button Style="{StaticResource HotspotButtonBase}"
                                        Width="50" Height="27"
                                        Content="Route 22"
                                        FontSize="7"
                                        Tag="kanto-route-22"
                                        Loaded="Hotspot_Loaded"
                                        Click="Hotspot_Click" Canvas.Left="-4" Canvas.Top="189" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Top">
                                    <Button.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform/>
                                            <RotateTransform Angle="-0.111"/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </Button.RenderTransform>
                                </Button>
                            </Canvas>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>
