<Page x:Class="PokeAtlas.PokemonDetailView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#0F1115" Margin="0">

    <Page.Resources>
        <SolidColorBrush x:Key="BgCard" Color="#171A21"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#2A2F3A"/>
        <SolidColorBrush x:Key="FgPrimary" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="FgMuted" Color="#9CA3AF"/>

        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BgCard}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>
    </Page.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,12">
            <Button Content="⟵ Voltar" Click="Back_Click"
              Padding="10,6" Margin="0,0,8,0"
              Background="#1F2937" Foreground="{StaticResource FgPrimary}"
              BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" />
            <TextBlock x:Name="TitleText" FontSize="22" FontWeight="Bold" Foreground="{StaticResource FgPrimary}"/>
        </DockPanel>

        <!-- Conteúdo -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Coluna esquerda -->
            <StackPanel Grid.Column="0" Grid.RowSpan="2" Orientation="Vertical">
                <Border Style="{StaticResource Card}" Padding="12" Height="260" Margin="0,0,0,12">
                    <Grid>
                        <Image x:Name="Sprite" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource Card}" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Tipos" Foreground="{StaticResource FgMuted}" Margin="0,0,0,8"/>
                        <WrapPanel x:Name="TypesPanel"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Habilidades" Foreground="{StaticResource FgMuted}" Margin="0,0,0,8"/>
                        <ItemsControl x:Name="AbilitiesList"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Direita: stats -->
            <Border Grid.Column="2" Grid.Row="0" Style="{StaticResource Card}" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="Estatísticas" Foreground="{StaticResource FgMuted}" Margin="0,0,0,8"/>
                    <ItemsControl x:Name="StatsList"/>
                </StackPanel>
            </Border>

            <!-- Direita: descrição + evoluções -->
            <Grid Grid.Column="2" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Descrição curta -->
                <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="Descrição" Foreground="{StaticResource FgMuted}" Margin="0,0,0,8"/>
                        <TextBlock x:Name="FlavorText" Foreground="{StaticResource FgPrimary}" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Evoluções com sprite -->
                <Border Grid.Column="1" Style="{StaticResource Card}" Margin="8,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Evoluções" Foreground="{StaticResource FgMuted}" Margin="0,0,0,8"/>
                        <ItemsControl x:Name="EvoList">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,8,8" Padding="8" CornerRadius="8"
                          Background="#151922" BorderBrush="#2A2F3A" BorderThickness="1">
                                        <StackPanel Width="96" MouseLeftButtonUp="EvoItem_Click" Cursor="Hand">
                                            <Image Width="64" Height="64" Stretch="Uniform"
                             Source="{Binding SpriteUrl}" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
